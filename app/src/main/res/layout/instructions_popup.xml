<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_gravity="center_vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="405dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="#fff1ad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="0"
                app:srcCompat="@drawable/logoo"></ImageView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff1ad"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/txtAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CURRENCY CALCULATOR"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="How To Use?"
                android:textColor="@color/black"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="15dp"
                android:textSize="18dp"
                android:text="Step 1: \nEnter the amount in UAE Dirhams\nStep 2: \nOnce the amount is entered, Press Convert button\nStep 3: \nYou get your converted rates instantly"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/Ok"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            android:gravity="center"
            android:padding="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:text="OK"
            android:textColor="#fff1ad"
            android:textColorHint="@color/teal_200"
            android:textSize="18sp">

        </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>